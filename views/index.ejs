<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="container mb-10" style="margin-bottom: 100px; margin-top:50px;">
            <h1 style="text-align: center;">URL Shortner</h1>
        </div>
        <div class="container">
            <form action="/shorturls" method="POST">
                <div class="form-group">
                    <label for="fullurl"><h4>Full URL</h4></label>
                    <input required name="fullurl" type="url" class="form-control" id="fullurl" placeholder="Paste the complete URL you want to shrink">
                </div>
                <button type="submit" class="btn btn-primary">Shrink URL</button>
            </form>
        </div>
        <div class="container" style="margin-top: 50px;">
            <table class="table table-responsive col-12">
                <thead class = "thead-dark">
                    <tr>
                        <th scope="col">Full URL</th>
                        <th scope="col">Shortened URL</th>
                        <th scope="col">Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% shorturls.forEach(shorturl => { %>
                    <tr>
                        <td><a href="<%= shorturl.full %>"><%= shorturl.full %></a></td>
                        <td><a href="<%= shorturl.short %>" target="_blank"><%= shorturl.short %></a></td>
                        <td><%= shorturl.clicks %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>